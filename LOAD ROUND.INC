     LIMRD=810            'STAGE SIZE
     LSCRX=135: RSCRX=230 'HORIZONTAL LIMIT
     PARTMAX=2            'SECTION PARTITION LIMIT

   END SELECT 'END OF CASE Section

 END SELECT 'END OF CASE Round

END SUB


