' --- SPAWN NEW ENEMIES ---
 
SUB SpawnEnemy(x,y,tp,st,sd,NUM)
 LOCAL T
 T=3

 DO WHILE T<=9
  INC T

  IF STE(T)=0 THEN
   'RIGHT OR LEFT INITIAL SIDE
   IF SD=0 THEN
    IF x<160 THEN ESide(T)=4 ELSE ESide(T)=5
   ELSE
    'SET THE SIDE IN THE PARAMETER
    ESide(T)=SD
   ENDIF

   'GENERIC START PARAMETERS
   NUM=T
   EX(T)=x: RealY(T)=y: EY(T)=0: EType(T)=tp
   IF ST=0 THEN ST=1
   EAN(T)=0: EAniDelay(T)=0:EAniSpd(T)=5: EWait(T)=0
   EMV(T)=1: EBACK(T)=1: EHIT(T)=0
   ESJMP(T)=0: STE(T)=st: EHURT(T)=0: EBURNED(T)=0
   ESPDX(T)=0: ESPDY(T)=0: ETR(T)=0: ECOMBO(T)=0

   'SET SPECIFIC START PARAMETERS FOR EACH ENEMY ----------------------------------------
   SELECT CASE EType(T)

    CASE BRED, JAKE, DUG:
     EEnMAX(T)=20+Round*5+(EType(T)-4)*5: ESCORE(T)=1000+(EEnMAX(T)*20)\10
     ES_SPD(T)=2: ESPD(T)=ES_SPD(T): ES_DEF(T)=2: ES_POW(T)=10: EDIST(T)=60

    CASE J, TWO_P:
     EEnMAX(T)=10+Round*5+(EType(T)-7)*5: ESCORE(T)=2000+(EEnMAX(T)*20)\10
     ES_SPD(T)=7: ESPD(T)=ES_SPD(T): ES_DEF(T)=2: ES_POW(T)=5: EDIST(T)=80

    CASE AXL, SLASH: 
     EEnMAX(T)=20+Round*5+(EType(T)-9)*5: ESCORE(T)=2000+(EEnMAX(T)*20)\10
     ES_SPD(T)=3: ESPD(T)=ES_SPD(T): ES_DEF(T)=4: ES_POW(T)=10: EDIST(T)=80

    CASE HOLLY_WOOD, EL_GADO:
     EEnMAX(T)=55+Round*5+(EType(T)-11)*5: ESCORE(T)=3000+(EEnMAX(T)*20)\10
     ES_SPD(T)=4: ESPD(T)=ES_SPD(T): ES_DEF(T)=3: ES_POW(T)=20: EDIST(T)=90

    CASE HOLLY_WOOD_RED:
     EEnMAX(T)=20: ESCORE(T)=3000+EEnMAX(T)
     ES_SPD(T)=6: ESPD(T)=ES_SPD(T): ES_DEF(T)=0: ES_POW(T)=15: EDIST(T)=120

    CASE BILL_BULL, G_ORIBER, WONG_WHO:
     EEnMAX(T)=40+Round*5+(EType(T)-14)*5: ESCORE(T)=2500+(EEnMAX(T)*20)\10
     ES_SPD(T)=3: ESPD(T)=ES_SPD(T): ES_DEF(T)=3: ES_POW(T)=15: EDIST(T)=70

    CASE POISON, ROXY:
     EEnMAX(T)=40+Round*5+(EType(T)-17)*5: ESCORE(T)=2000+(EEnMAX(T)*20)\10
     ES_SPD(T)=4: ESPD(T)=ES_SPD(T): ES_DEF(T)=2: ES_POW(T)=15: EDIST(T)=80

    CASE ANDORE, ANDORE_JR, ANDORE_FATHER, ANDORE_UNCLE, ANDORE_GRANPA:
     EEnMAX(T)=75+Round*5+(EType(T)-19)*10: ESCORE(T)=3000+(EEnMAX(T)*20)\10
     ES_SPD(T)=1: ESPD(T)=ES_SPD(T): ES_DEF(T)=5: ES_POW(T)=25: EDIST(T)=90

    CASE DAMND, DAMND_INTRO:
     EEnMAX(T)=330: ESCORE(T)=10000+(EEnMAX(T)*20)\10
     ES_SPD(T)=2: ESPD(T)=ES_SPD(T): ES_DEF(T)=5: ES_POW(T)=25: EDIST(T)=120

    CASE SODOM:
     EEnMAX(T)=330: ESCORE(T)=20000+(EEnMAX(T)*20)\10
     ES_SPD(T)=2: ESPD(T)=ES_SPD(T): ES_DEF(T)=5: ES_POW(T)=25: EDIST(T)=90

    CASE EDI_E:
     EEnMAX(T)=330: ESCORE(T)=30000+(EEnMAX(T)*20)\10
     ES_SPD(T)=2: ESPD(T)=ES_SPD(T): ES_DEF(T)=5: ES_POW(T)=25: EDIST(T)=90

    CASE ROLENTO:
     EEnMAX(T)=330: ESCORE(T)=40000+(EEnMAX(T)*20)\10
     ES_SPD(T)=2: ESPD(T)=ES_SPD(T): ES_DEF(T)=5: ES_POW(T)=25: EDIST(T)=90

    CASE ABIGAIL:
     EEnMAX(T)=360: ESCORE(T)=50000+(EEnMAX(T)*20)\10
     ES_SPD(T)=2: ESPD(T)=ES_SPD(T): ES_DEF(T)=5: ES_POW(T)=25: EDIST(T)=90

    CASE BELGER:
     EEnMAX(T)=400: ESCORE(T)=100000+(EEnMAX(T)*20)\10
     ES_SPD(T)=2: ESPD(T)=ES_SPD(T): ES_DEF(T)=5: ES_POW(T)=25: EDIST(T)=90

   END SELECT
   
   INC ES_SPD(T),(GLEVEL-1): ESPD(T)=ES_SPD(T)
   INC ES_DEF(T),(GLEVEL-1)
   INC ES_POW(T),(GLEVEL-1)*5
   INC EEnMAX(T),(GLEVEL-1)*EEnMAX(T)\4
 
   EEnergy(T)=EEnMAX(T)
   EXIT DO
 
  ENDIF

 LOOP

END SUB
