SUB MXN_Logo
Local ZX,ZY,TX,T,I,BL,SW,LOGO

 PAGE WRITE 0: CLS 0
 PAGE WRITE 1: CLS 0
 LOAD PNG ".\images\MXN LOGO.png"

 ZX=-90: ZY=-90
 TX=-34: BL=0

 DO WHILE LOGO<>3
 PAGE WRITE 2: CLS 0

 T=KEYDOWN(1)
 if T=27 OR T=32 then PLAY STOP: exit sub

 INC ZX,2: INC ZY,2
 IF ZX=-2 THEN LOGO=1:PLAY STOP: TIMER=0
 IF ZX>0 THEN ZX=0
 IF ZY>0 THEN ZY=0

 IF LOGO=0 THEN 
  PLAY SOUND 1,B,W,9000+ZX*10,20-ABS(ZX)/5
 ENDIF

 BOX 0,0,320,240,0,,RGB(0,0,255-ABS(ZX*2.5))
 BOX 90+ZX,80+ZY,140-ZX*2,76-ZY*2,1,&HFFFFFF
 BOX 89+ZX,79+ZY,142-ZX*2,78-ZY*2,1,&H666666
 BOX 91+ZX,81+ZY,138-ZX*2,74-ZY*2,0,,0

 IF LOGO>0 THEN
  INC TX,2: IF TX=-2 THEN LOGO=2:TIMER=0
  IF TX>0 THEN TX=0
  IMAGE RESIZE_FAST 0,0,134,70,93,83-TX,134,70+TX*2,1

  IF SW=0 THEN SW=1 ELSE SW=0
  FOR T=81+SW TO 154 STEP 2
   BOX 91,T,138,1,,,0
  NEXT T

  IF LOGO=2 AND TIMER>1000 THEN
   BLIT 134,0,93,144,81,9,1,4
   PLAY SOUND 1,B,Q,1800,18-BL
   INC BL,1: IF BL>18 THEN BL=18
   PAUSE(16)
   IF TIMER>4000 THEN LOGO=3
   'IMAGE RESIZE_FAST 89,79,142,78,89-142\2,78-78\2,142*2,78*2  
  ELSE
   PLAY SOUND 1,B,N,10,11+TX/4
   FOR T=81+SW TO 154 STEP 2
    FOR I=91+SW TO 91+137 STEP 2
     W=RND*(TIMER MOD 250)
     PIXEL I,T,RGB(W,W,W)
     'BOX I,T,2,2,1,RGB(W,W,W)
   NEXT I,T
  ENDIF
 ENDIF

 PAGE COPY 2 TO 0,B
 loop
 
 PAGE WRITE 0: SW=0
 FOR T=0 TO 320
  FOR I=0 TO 240 STEP 2
   PIXEL T,I,0
   PIXEL 320-T,I+1,0
  NEXT I
 NEXT T
END SUB


